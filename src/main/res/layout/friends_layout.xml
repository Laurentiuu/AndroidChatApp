<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc"
        tools:context=".FriendsActivity" android:id="@+id/friends_layout">
    <ImageView
            android:layout_width="445dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/bottom_bar"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.518" android:layout_marginTop="-1dp"/>
    <TextView
            android:text="Friends"
            android:layout_width="149dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_height="wrap_content" android:id="@+id/firendsText"
            android:textSize="36sp" android:layout_marginTop="10dp" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="120dp" android:layout_marginEnd="120dp"/>
    <ListView
            android:layout_width="match_parent"
            android:background="#cccccc"
            android:layout_height="648dp" tools:layout_editor_absoluteY="70dp"
            tools:layout_editor_absoluteX="1dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="0dp" android:id="@+id/listView"
            android:layout_marginTop="78dp" android:layout_alignParentTop="true"/>
</RelativeLayout>