<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdministratorActivity">

    <ListView
            android:layout_width="match_parent"
            android:background="#cccccc"
            android:layout_height="20dp" tools:layout_editor_absoluteY="70dp"
            tools:layout_editor_absoluteX="1dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="0dp" android:id="@+id/listView"
            android:layout_marginTop="70dp" android:layout_alignParentTop="true">
    </ListView>

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/blue"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Administrator"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content" android:id="@+id/firendsText"
            android:textSize="36sp" android:layout_marginTop="10dp" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="169dp" android:layout_marginEnd="169dp"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="52dp" app:srcCompat="@android:drawable/ic_menu_preferences"
            android:id="@+id/popIcon"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="17dp" android:layout_marginEnd="17dp" android:layout_marginTop="9dp"/>
</RelativeLayout>